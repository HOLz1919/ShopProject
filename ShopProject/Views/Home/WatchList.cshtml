@using ShopProject.ViewModel

@model WatchListVM

@{
    ViewBag.Title = "WatchList";
}

<h2>WatchList</h2>

@foreach (WatchVM item in Model.WatchVMList)
{
    <div class="Shoppingitem" style="float: left; margin-left:10px; margin-top:10px; text-align: center;">
        <span style="font-weight: 700">@Html.DisplayNameFor(model => Model.WatchVMList[0].watch.Name)</span>: @item.watch.Name<br />
        <span style="font-weight: 700">@Html.DisplayNameFor(model => Model.WatchVMList[0].watch.Cost)</span>: @item.watch.Cost<br />
        <span style="font-weight: 700">@Html.DisplayNameFor(model => Model.WatchVMList[0].watch.Description)</span>: @item.watch.Description<br />
        @Html.ActionLink("Dodaj do koszyka", "AddItem", item.watch) | @Html.ActionLink("Sprawdź zdjęcie", "ShowPhoto", item.watch)
    </div>

}