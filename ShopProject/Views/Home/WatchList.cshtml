@using ShopProject.ViewModel

@model WatchListVM

@{
    ViewBag.Title = "WatchList";
}

<h2>Zegarki</h2>

@foreach (WatchVM item in Model.WatchVMList)
{
<div class="Shoppingitem" style="float: left; margin-left:10px; margin-top:10px; text-align: center;">
    <img src="~/Images/@item.watch.ProductImage" alt="@item.watch.ProductImage" style="width:250px;height:250px;"><br />
    <span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.WatchVMList[0].watch.Name)</span>: @item.watch.Name<br />
    <span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.WatchVMList[0].watch.Cost)</span>: @item.watch.Cost<br />
    <span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.WatchVMList[0].watch.Description)</span>: @item.watch.Description<br />
    @Html.ActionLink("Dodaj do koszyka", "AddItem", item.watch) 
</div>

}

<div style="clear: both; padding-top:40px;">
    <input type="button" class="btn btn-info" value="Panel Administracyjny" onclick="location.href='@Url.Action("BeltList", "Belt")'" />
</div>