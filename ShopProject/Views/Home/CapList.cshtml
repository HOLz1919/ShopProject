@using ShopProject.ViewModel

@model CapListVM

@{
    ViewBag.Title = "CapList";
}

<h2>Czapki</h2>

@foreach (CapVM item in Model.CapVMList)
{
<div class="Shoppingitem" style="float: left; margin-left:10px; margin-top:10px; text-align: center;">
    <img src="~/Images/@item.cap.ProductImage" alt="@item.cap.ProductImage" style="width:250px;height:250px;"><br />
    <span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.CapVMList[0].cap.Name)</span>: @item.cap.Name<br />
    <span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.CapVMList[0].cap.Cost)</span>: @item.cap.Cost<br />
    <span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.CapVMList[0].cap.Description)</span>: @item.cap.Description<br />
    @Html.ActionLink("Dodaj do koszyka", "AddItem", item.cap)
</div>

}

<div style="clear: both; padding-top:40px;">
    <input type="button" class="btn btn-info" value="Panel Administracyjny" onclick="location.href='@Url.Action("BeltList", "Belt")'" />
</div>