@using ShopProject.ViewModel

@model CapListVM

@{
    ViewBag.Title = "CapList";
}

<h2>CapList</h2>

@foreach (CapVM item in Model.CapVMList)
{
    <div class="Shoppingitem" style="float: left; margin-left:10px; margin-top:10px; text-align: center;">
        <span style="font-weight: 700">@Html.DisplayNameFor(model => Model.CapVMList[0].cap.Name)</span>: @item.cap.Name<br />
        <span style="font-weight: 700">@Html.DisplayNameFor(model => Model.CapVMList[0].cap.Cost)</span>: @item.cap.Cost<br />
        <span style="font-weight: 700">@Html.DisplayNameFor(model => Model.CapVMList[0].cap.Description)</span>: @item.cap.Description<br />
        @Html.ActionLink("Dodaj do koszyka", "AddItem", item.cap) | @Html.ActionLink("Sprawdź zdjęcie", "ShowPhoto", item.cap)
    </div>

}
