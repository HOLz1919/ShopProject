@using ShopProject.ViewModel

@model ShoppingCartListVM

@{
    ViewBag.Title = "SchoppingCart";
}

<h2>SchoppingCart</h2>

@foreach (ProductVM item in Model.ShoppingCartList)
{
    <div class="Shoppingitem" style="float: left; margin-left:10px; margin-top:10px; text-align: center;">
        <img src="~/Images/@item.product.ProductImage" alt="@item.product.ProductImage" style="width:250px;height:250px;"><br />
        @*<span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.Name)</span>:*@ @item.product.Name<br />
        @*<span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.Cost)</span>:*@ @item.product.Cost<br />
        @*<span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.Description)</span>:*@ @item.product.Description<br />
    </div>

}