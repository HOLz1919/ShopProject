@using ShopProject.ViewModel

@model BeltListVM

@{
    ViewBag.Title = "BeltList";
}

<h2>BeltList</h2>



@foreach (BeltVM item in Model.BeltVMList)
{
<div class="Shoppingitem" style="float: left; margin-left:10px; margin-top:10px; text-align: center;">
    <img src="~/Images/@item.belt.ProductImage" alt="@item.belt.ProductImage" style="width:250px;height:250px;"><br />
    <span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.BeltVMList[0].belt.Name)</span>: @item.belt.Name<br />
    <span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.BeltVMList[0].belt.Cost)</span>: @item.belt.Cost<br />
    <span style="font-weight: 700; text-align: left;">@Html.DisplayNameFor(model => Model.BeltVMList[0].belt.Description)</span>: @item.belt.Description<br />
    @Html.ActionLink("Dodaj do koszyka", "AddBelt", item.belt) 
</div>

}

   
