@model ShopProject.ViewModel.RegistrationVM

@{


    ViewBag.Title = "Registration";
}

<h2>Registration</h2>

@using (Html.BeginForm())
{

    <table>
        <tr>
            <td>@Html.DisplayNameFor(model => Model.user.Username)</td>
            <td>@Html.EditorFor(model => Model.user.Username)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => Model.user.Password)</td>
            <td>@Html.EditorFor(model => Model.user.Password)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => Model.user.FirstName)</td>
            <td>@Html.EditorFor(model => Model.user.FirstName)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => Model.user.LastName)</td>
            <td>@Html.EditorFor(model => Model.user.LastName)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => Model.user.Mail)</td>
            <td>@Html.EditorFor(model => Model.user.Mail)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => Model.user.Age)</td>
            <td>@Html.EditorFor(model => Model.user.Age)</td>
        </tr>

    </table>

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rejestruj" class="btn btn-default" />
            </div>
        </div>
    </div>

}
