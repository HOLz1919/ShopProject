@using ShopProject.Models;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — FishDesign</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <style>
        .field-validation-error{
            color: red;
            font-weight: bold;
        }

        .input-validation-error{
            background:pink;
            border: 1px solid red;
        }
    </style>
</head>
<body>
    @{
        var user = Session["User"] as User;
    }


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FishDesign", "BeltList", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Paski", "BeltList", "Home")</li>
                    <li>@Html.ActionLink("Czapki", "CapList", "Home")</li>
                    <li>@Html.ActionLink("Zegarki", "WatchList", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="login"> @if(user!=null)
        {
            <span>Witaj @user.Username! @Html.ActionLink("Wyloguj się", "Logout", "Authentication")</span>
        }
        @if(user==null)
        {
            <span>@Html.ActionLink("Zaloguj się", "Login", "Authentication")</span>
        }


        </div>
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
