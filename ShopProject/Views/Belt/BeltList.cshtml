@using ShopProject.ViewModel

@model BeltListVM

@{
    ViewBag.Title = "BeltList";
}




<div class="creator">
    <input type="button" class="btn btn-info" value="Dodaj Pasek" onclick="location.href='@Url.Action("AddBelt", "Belt")'" />
</div>
<div>
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => Model.BeltVMList[0].belt.BeltId)</th>
            <th>@Html.DisplayNameFor(model => Model.BeltVMList[0].belt.Name)</th>
            <th>@Html.DisplayNameFor(model => Model.BeltVMList[0].belt.Cost)</th>
            <th>@Html.DisplayNameFor(model => Model.BeltVMList[0].belt.Description)</th>
            <th></th>
            <th></th>
        </tr>



        @foreach (BeltVM item in Model.BeltVMList)
        {
            <tr>
                <td>@item.belt.BeltId</td>
                <td>@item.belt.Name</td>
                <td>@item.belt.Cost</td>
                <td>@item.belt.Description</td>
                <td>@Html.ActionLink("Edytuj", "EditBelt", item.belt)</td>
                <td>@Html.ActionLink("Usuń", "DeleteBelt", item.belt)</td>
            </tr>
        }
    </table>

    <div class="miniContainer">
        <div class="selectProductList" id="first">
            <input type="button" class="btn btn-info" value="Paski" onclick="location.href='@Url.Action("BeltList", "Belt")'" />
        </div>
        <div class="selectProductList">
            <input type="button" class="btn btn-info" value="Czapki" onclick="location.href='@Url.Action("CapList", "Cap")'" />
        </div>
        <div class="selectProductList">
            <input type="button" class="btn btn-info" value="Zegarki" onclick="location.href='@Url.Action("WatchList", "Watch")'" />
        </div>
    </div>

</div>

