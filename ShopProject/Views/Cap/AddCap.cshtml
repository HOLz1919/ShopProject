@model ShopProject.ViewModel.AddCapVM

@{
    ViewBag.Title = "AddCap";
}

<h2>AddCap</h2>

@using (Html.BeginForm("AddCap", "Cap", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<table>
    <tr>
        <td>@Html.DisplayNameFor(model => Model.cap.Name)</td>
        <td>@Html.EditorFor(model => Model.cap.Name)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => Model.cap.Cost)</td>
        <td>@Html.EditorFor(model => Model.cap.Cost)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => Model.cap.Description)</td>
        <td>@Html.EditorFor(model => Model.cap.Description)</td>
    </tr>

    <tr>
        <td>
            <input type="file" name="imageFile" size="23" accept="gif|jpg|png" />
            @Html.ValidationMessageFor(model => model.cap.ProductImage)
        </td>
    </tr>
</table>


    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}